#!/usr/bin/env python

import sys
import getopt
import os
import logging

from genesis2.webserver.daemon import Daemon


class GenesisDaemon(Daemon):
    def run(self):
        from genesis2.webserver.standalone import run_server
        run_server(self.log_level, self.config_file)


def usage():
    print """
Usage: %s [options]
Options:
    -c, --config <file> - Use given config file instead of default
    -v                  - Debug/verbose logging
    -d, --start         - Run in background (daemon mode)
    -r, --restart       - Restart daemon
    -s, --stop          - Stop daemon
    -h, --help          - This help
    """


if __name__ == '__main__':
    reload(sys)
    # TODO: is this necessary?
    sys.setdefaultencoding('utf-8')
    sys.dont_write_bytecode = True

    log_level = logging.INFO
    config_file = ''

    try:
        opts, args = getopt.getopt(sys.argv[1:], 'hc:drsv', ['help', 'config=', 'start', 'stop', 'restart'])
    except getopt.GetoptError, e:
        print str(e)
        usage()
        sys.exit(2)

    action = 'run'
    os.environ['XTABLES_LIBDIR'] = '/usr/lib/iptables'

    for o, a in opts:
        if o in ('-h', '--help'):
            usage()
            sys.exit(0)
        elif o in ('-v',):
            log_level = logging.DEBUG
        elif o in ('-c', '--config'):
            if os.path.isfile(a):
                config_file = a
        elif o in ('-d', '--start'):
            action = 'start'
        elif o in ('-r', '--restart'):
            action = 'restart'
        elif o in ('-s', '--stop'):
            action = 'stop'

    # Find default config file
    if not config_file:
        # Check for config file in /etc/genesis/genesis.conf
        if os.path.isfile('/etc/genesis/genesis.conf'):
            config_file = '/etc/genesis/genesis.conf'
        elif os.path.isfile(os.path.join(sys.path[0], 'genesis.conf')):
            # Try local config file
            config_file = os.path.join(sys.path[0], 'genesis.conf')
    
    if action == 'run':
        from genesis2.webserver.standalone import run_server
        run_server(log_level, config_file)
    else:
        genesisd = GenesisDaemon('/var/run/genesis.pid', stdout='/var/log/genesis.log')
        genesisd.log_level = log_level
        genesisd.config_file = config_file

        if 'start' == action:
            genesisd.start()
        elif 'stop' == action:
            genesisd.stop()
        elif 'restart' == action:
            genesisd.restart()
        else:
            usage()
            sys.exit(2)

    sys.exit(0)
